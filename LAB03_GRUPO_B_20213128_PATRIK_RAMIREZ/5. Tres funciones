#include <iostream>

using namespace std;

int vcomprendido(int x){
	while(x<=0 or x>=100){
		cout<<"Introduce un valor entre 0 y 100: "<<endl;cin>>x;
	}
	cout<<"Valor: "<<x;		
}

int par(int x){
	if (x%2==0){
		cout<<"Es par";
	}else{
		cout<<"Es impar";
	}
}

int sumarpares(int x){
	int suma=0;
	for(int i=1; i<=x; i=i+2){
		suma=suma+i;		
	}
	cout<<"La suma de impares es: "<<suma;
}

	
int main(){
	int x;
	cout<<"Valor?: ";cin>>x;
	vcomprendido(x);
	cout<<endl;
	par(x);
	cout<<endl;
	sumarpares(x);
}
