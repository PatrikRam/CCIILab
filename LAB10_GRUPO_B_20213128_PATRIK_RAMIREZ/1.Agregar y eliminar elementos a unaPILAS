#include<iostream>
#include<stdlib.h>
using namespace std;

struct Nodo{
	int dato;
	Nodo *siguiente;
};

void agregarPila(Nodo *&pila, int n){
	Nodo *nuevo_nodo = new Nodo();
	nuevo_nodo->dato = n;
	nuevo_nodo->siguiente=pila;
	pila = nuevo_nodo;
	
	cout<<"\nElemento "<<n<<" agregado correctamente"<<endl;
}

void sacarPila(Nodo*&pila, int &n){
	Nodo *aux = pila;
	n=aux->dato;
	pila= aux->siguiente;
	delete aux;
}

int main(){
	Nodo *pila = NULL;
	int dato, datos;
	cout<<"Cuantos elementos deseas aÃ±adira a la PILA?: ";cin>>datos;
	for(int i=0; i<datos; i++){
	
	cout<<"Digite un numero: ";
	cin>>dato;
	agregarPila(pila,dato);
	}
	
	
	cout<<"\nSacando elementos de la pila: ";
	while(pila!=NULL){
		sacarPila(pila,dato);
		if(pila!=NULL){
			cout<<dato<<" , ";
		}else{
			cout<<dato<<".";
		}
		
	}
}
