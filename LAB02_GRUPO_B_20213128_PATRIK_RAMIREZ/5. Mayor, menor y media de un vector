#include <iostream>

using namespace std;

int main(){
	int a[100], n, mayor=0, menor=999, suma=0; 
	double media;
	cout<<"TamaÃ±o del arreglo: ";
	cin>>n;
	
   for (int i=0; i<n; i=i++){
  		cout<<"Valor?: "<<endl;
  		cin>>a[i];
 		
 		if(a[i]>mayor){
 			mayor=a[i];
 		}
 		if(a[i]<menor){
 			menor=a[i];
 		}
 		suma=suma+a[i];
 	 }
 	 media= suma/n;
 	 cout<<"El mayor numero es:"<<mayor<<endl;
 	 cout<<"El menor numero es:"<<menor<<endl;
 	 cout<<"La media es :"<<media<<endl;
 	 	
}
